{
  "include": ["src/**/*"],
  "exclude": [
    "src/**/*.vitro.jsx",
    "src/**/__tests__",
    "src/**/__test__",
    "src/**/__snapshot__"
  ],
  "compilerOptions": {
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false,
    "jsx": "react",
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist"
  }
}
